<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--menu-->
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <!--windowBackground-->
        <item name="android:windowBackground">@color/as_windows_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="alertDialogProTheme">@style/Theme.AlertDialogPro.Material.Light</item>

    </style>

    <!--app:titleTextAppearance="@style/Toolbar.TitleText"-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/welcome</item>
      <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
