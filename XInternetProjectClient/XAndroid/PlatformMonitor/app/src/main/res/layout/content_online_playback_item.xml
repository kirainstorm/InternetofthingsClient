<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/his_list_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="Large T\ext"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/his_list_img"
        android:layout_toEndOf="@+id/his_list_img"
        android:textColor="#000000"
        android:paddingBottom="11dp" />

    <ImageView
        android:id="@+id/his_list_img"
        android:layout_width="24dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="center"
        android:src="@drawable/zz_playback_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/his_list_date"
        android:paddingLeft="10dp"
        android:layout_below="@+id/his_list_name"
        android:textColor="#8d8d8d"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/his_list_img" />

</RelativeLayout>
