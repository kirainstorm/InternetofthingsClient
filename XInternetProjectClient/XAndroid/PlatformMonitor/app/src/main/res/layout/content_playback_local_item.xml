<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/fra_sdrec_list_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignBottom="@+id/fra_sdrec_list_name"
        android:layout_alignEnd="@+id/fra_sdrec_list_name" />


    <TextView
        android:id="@+id/fra_sdrec_list_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="Large T\ext"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/fra_sdrec_list_img"
        android:layout_toEndOf="@+id/fra_sdrec_list_img"
        android:textColor="#000000"
        android:paddingBottom="11dp" />

    <ImageView
        android:id="@+id/fra_sdrec_list_img"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/fra_sdrec_list_date"
        android:paddingLeft="10dp"
        android:layout_below="@+id/fra_sdrec_list_name"
        android:textColor="#8d8d8d"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/fra_sdrec_list_img" />

</RelativeLayout>
